[Unit]
Description=Apache Hadoop - Secondary Namenode
After=network.target

[Service]
Type=forking
User={{ hadoop_os_user_name }}
Group={{ hadoop_os_group_name }}
ExecStart={{ hadoop_link_dir }}/bin/hdfs --daemon start secondarynamenode
ExecStop={{ hadoop_link_dir }}/bin/hdfs --daemon stop secondarynamenode
Restart=on-failure

[Install]
WantedBy=multi-user.target
