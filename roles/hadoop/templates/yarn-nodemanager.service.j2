[Unit]
Description=Apache YARN - Nodemanager
After=network.target

[Service]
Type=forking
User={{ hadoop_os_user_name }}
Group={{ hadoop_os_group_name }}
ExecStart={{ hadoop_link_dir }}/bin/yarn --daemon start nodemanager
ExecStop={{ hadoop_link_dir }}/bin/yarn --daemon stop nodemanager
Restart=on-failure

[Install]
WantedBy=multi-user.target
