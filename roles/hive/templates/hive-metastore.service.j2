[Unit]
Description=Apache Hive Metastore
After=network.target

[Service]
Type=simple
User={{ hive_os_user_name }}
Group={{ hive_os_group_name }}
Environment=HADOOP_HOME={{ hadoop_link_dir }}
ExecStart={{ hive_link_dir }}/bin/hive --service metastore
Restart=on-failure

[Install]
WantedBy=multi-user.target
